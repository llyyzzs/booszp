.note-list {
  display: flex;
  flex-direction: column;
  height: 100%;
  padding: 20rpx;
  justify-content: center;
  align-items: center;
}

.top{
  display: flex;
  width: 100%;
  height: 30px;
  margin-left: 10px;
}
.search{
  width: 100%;
  display: flex;
  height: 30px;
}
.search image{
  width:30px ;
  height:30px ;
  background-color: rgb(241, 243, 243);
  border-radius: 12px  0px  0px 12px ;
}
.search input{
  width: 80%;
  height: 30px;
  background-color: rgb(241, 243, 243);
  border-radius:   0px 12px 12px 0px  ;
  font-size: 12px;
  margin-left: -15px;
}

.note-scroll {
  flex: 1;
  margin-top: 20rpx;
  justify-content: center;
  align-items: center;
  width: 100%; /* 设置滚动区域宽度为屏幕宽度 */
  background-color: #fff;
}

.note-card {
  padding: 25rpx;
  position: relative;
  border-bottom: 1px solid #ebebeb;
  cursor: pointer;
  border-radius: 12px;
  margin-bottom: 20rpx;
  background-color: rgb(241, 243, 243);
}

.note-title {
  font-size: 32rpx;
  font-weight: bold;
  color: rgb(54, 49, 49);
  margin-bottom: 10rpx;
  font-weight: 500;
}

.note-content {
  font-size: 28rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  margin-bottom: 10rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.add-note-btn {
  position: fixed;
  right: 40rpx;
  bottom: 60rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #1296db;
  cursor: pointer;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.add-note-btn image {
  display: block;
  margin: auto;
  width: 40rpx;
  height: 40rpx;
}
.bottom{
  display: flex;
  width: 100rpx;
  height: 100rpx;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 70rpx;
}
.bottom image{
  width: 100rpx;
  height: 100rpx;
}

.item {
  display: flex;
  width: 100%;
  padding: 15px 0px;
  border-radius: 10px;
  margin-bottom: 10px;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.item-1{
  display: flex;
  width: 100%;
  height: auto;
  justify-content: space-between;
  margin-bottom: 10px;
}
.item-1-1{
  display: flex;
  width: auto;
  font-size: 18px;
  margin-left: 10px;
}
.item-1-2{
  width: auto;
  font-size: 18px;
  margin-right: 12px;
  color: rgba(10, 184, 77, 0.986);
}
.item-2{
  display: flex;
  width: 100%;
  height: auto;
  font-size: 10px;
  margin-left: 20px;
  margin-bottom: 10px;
  color: rgb(112, 110, 110);
}
.item-3{
  display: flex;
  width: 100%;
  font-size: 11px;
  height: auto;
  margin-left: 20px;
  margin-bottom: 10px;
  flex-wrap: wrap;
  color: rgb(112, 110, 110);
}
.item-3 text{
  background-color:rgb(238, 236, 236);
  margin-right: 10px;
}
.item-4{
  display: flex;
  width: 100%;
  height: auto;
  justify-content: space-between;
  margin-bottom: 10px;
  align-items: center;
}
.item-4-1{
  display: flex;
  width: auto;
  font-size: 12px;
  margin-left: 10px;
  justify-content: center;
  align-items: center;
}
.item-4-1 image{
  width: 20px;
  height: 20px;
  border-radius: 50%;
}
.item-4-2{
  display: flex;
  width: auto;
  font-size: 12px;
  margin-right: 12px;
  justify-content: center;
}