<view class="container">
  <form bindsubmit="onSubmit">
    <view class="input-group">
      <text class="label">名字：</text>
      <input type="text" name="name" value="{{resume.name}}" />
    </view>
    <view class="input-group" bindtap="toggleDropdown">
      <text class="label">姓名：</text>
      <input type="text" name="name" value="{{resume.user.name}}" disabled="true"/>
    </view>
    <view id="dropdown-content" hidden="{{!showDropdown}}">
      <view class="input-group">
        <text class="label">出生日期：</text>
        <picker mode="date" name="birthday" start="1900-01-01" end="{{ currentDate }}" value="{{ birthDate }}" bindchange="onDateChange">
          <view class="picker">{{ birthDate }}</view>
        </picker>
      </view>
      <view class="input-group">
        <text class="label">联系电话：</text>
        <input type="number" name="phone" value="{{user.phone}}" />
      </view>
      <view class="input-group">
        <text class="label">电子邮件：</text>
        <input type="email" name="email" value="{{user.email}}" />
      </view>
      <view class="input-group">
        <text class="label">学历：</text>
        <picker mode="selector" range="{{selectorItems}}" bindchange="handleSelect">
          <view class="select-value">{{selectedValue}}</view>
        </picker>
      </view>
    </view>

    <view class="input-group">
      <text class="label">求职意向：</text>
      <input type="text" name="want_to" value="{{resume.want_to}}" />
    </view>
    <view class="input-group">
      <text class="label">所在城市：</text>
      <picker mode='region' bindchange='regionChange'>
        <view class="top-1">{{address}}</view>
      </picker>
    </view>
    <view class="input-group">
      <text class="label">专业：</text>
      <input type="text" name="major" value="{{resume.major}}" required />
    </view>
    <view class="input-group2">
      <text class="label">个人优势：</text>
      <textarea maxlength="-1" name="advantage" value="{{resume.advantage}}" />
    </view>
    <view class="input-group2">
      <text class="label">教育经历：</text>
      <textarea maxlength="-1" name="education_exp" value="{{resume.education_exp}}" required></textarea>
    </view>

    <view class="input-group2">
      <text class="label">工作经历：</text>
      <textarea maxlength="-1" name="work_exp" value="{{resume.work_exp}}" required></textarea>
    </view>
    <view class="input-group2">
      <text class="label">项目经历：</text>
      <textarea maxlength="-1" name="projetc_exp" value="{{resume.projetc_exp}}" required></textarea>
    </view>
    <view class="input-group2">
      <text class="label">职业技能：</text>
      <textarea maxlength="-1" name="skill" value="{{resume.skill}}" required />
    </view>

    <view class="input-group2">
      <text class="label">荣誉与奖励：</text>
      <textarea maxlength="-1" name="certification" value="{{resume.certification}}" required></textarea>
    </view>
    <view class="input-group2">
      <text class="label">自我评价：</text>
      <textarea maxlength="-1" name="evaluate" value="{{resume.evaluate}}" required></textarea>
    </view>
    <button form-type='submit'>提交</button>
  </form>
</view>