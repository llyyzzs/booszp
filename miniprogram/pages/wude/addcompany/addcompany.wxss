/* pages/wude/wd/wd.wxss */
.container {
  display: flex;
  width: 100%;
  height: 100%;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.input-group {
  display: flex;
  width: 700rpx;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #ccc;
  justify-content: space-between;
}
.input-group2 {
  display: flex;
  width: 700rpx;
  height: 400rpx;
  flex-direction: column;
  margin-bottom: 20rpx;
}
.label {
  display:flex;
  align-items: center;
  width: 170rpx;
  font-size: 28rpx;
  color: #666;
  
}

input,picker,radio-group {
  flex: 1;
  padding: 20rpx;
  align-items: center;
  justify-content: center;
  text-align:end;
  font-size: 28rpx;
  color: #333;
  width: auto;
  background-color: #fff;
}
textarea{
  flex:1px;
  border: 1rpx solid #ccc;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  width: auto;
  background-color: #fff;
}
button[form-type='submit'] {
  display: block;
  margin: 0 auto;
  width: 400rpx;
  height: 84rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  background-color: rgb(79, 226, 177);
  border: none;
  border-radius: 10rpx;
}
button:active{
  background-color: rgb(250, 250, 250);
}
.input-group image{
  width: 40px;
  height: 40px;
}