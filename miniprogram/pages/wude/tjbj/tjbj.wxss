.container {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
  padding: 40rpx;
}
form{
  width: 100%;
  height: 100%;
}
.content{
  display: flex;
  width: 100%;
  flex-direction: column;
}
input[type="text"]{
  width: 100%;
  height: 100rpx;
  color: #000;
  border-bottom: 1rpx solid rgb(223, 219, 219);
  font-weight: 500;
}
textarea {
  display: block;
  width: 100%;
  height: 80vh;
  box-sizing: border-box;
  padding: 10rpx;
  font-size: 24rpx;
  margin-bottom: 20rpx;
  color: #000;
  font-weight: 300;
}

button {
  display: block;
  margin: 0 auto;
  background-color: #3366ff;
  color: #fff;
  font-size: 32rpx;
  border: none;
  border-radius: 10rpx;
  padding: 10rpx 40rpx;
}
