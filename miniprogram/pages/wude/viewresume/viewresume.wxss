.container {
  display: flex;
  padding: 20rpx;
  flex-direction: column;
  background-color: rgb(242, 250, 250);
}

.tab-scroll{
  display: flex;
  width: 100%;
  height: 30px;
  margin-bottom: 20rpx;
  flex-direction: row;
  white-space: nowrap;
}

.tab-item {
  display: inline-block;
  font-size: 28rpx;
  color: #333;
  width: 50px;
  padding: 10rpx 20rpx;
}

.tab-item.active {
  color: #f00;
  border-bottom: 2rpx solid #f00;
}

.item {
  display: flex;
  width: 100%;
  border-radius: 10px;
  margin-bottom: 10px;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 10rpx;
  background-color: rgb(255, 255, 255);
}

.order-header {
  display: flex;
  width: 90%;
  justify-content: space-between;
  margin-top: 10px;
  align-items: center;
  margin-bottom: 20rpx;
}

.order-number {
  font-size: 28rpx;
  color: #333;
}

.order-status {
  font-size: 28rpx;
  color: rgb(233, 42, 42);
}


.item-1{
  display: flex;
  width: 100%;
  height: auto;
  justify-content: space-between;
  margin-bottom: 10px;
}
.item-1-1{
  display: flex;
  width: auto;
  font-size: 18px;
  margin-left: 10px;
}
.item-1-2{
  width: auto;
  font-size: 18px;
  margin-right: 12px;
  color: rgba(10, 184, 77, 0.986);
}
.item-2{
  display: flex;
  width: 100%;
  height: auto;
  font-size: 10px;
  margin-left: 20px;
  margin-bottom: 10px;
  color: rgb(112, 110, 110);
}
.item-3{
  display: flex;
  width: 100%;
  font-size: 11px;
  height: auto;
  margin-left: 20px;
  margin-bottom: 10px;
  flex-wrap: wrap;
  color: rgb(112, 110, 110);
}
.item-3 text{
  background-color:rgb(238, 236, 236);
  margin-right: 10px;
}
.item-4{
  display: flex;
  width: 100%;
  height: auto;
  justify-content: space-between;
  margin-bottom: 10px;
  align-items: center;
}
.item-4-1{
  display: flex;
  width: auto;
  font-size: 12px;
  margin-left: 10px;
  justify-content: center;
  align-items: center;
}
.item-4-1 image{
  width: 20px;
  height: 20px;
  border-radius: 50%;
}
.item-4-2{
  display: flex;
  width: auto;
  font-size: 12px;
  margin-right: 12px;
  justify-content: center;
}