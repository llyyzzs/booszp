.container {
  display: flex;
  width: 100%;
  height: 100%;
  background-color: #27d3bf;
}

.header {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  font-size: 36rpx;
}

.content {
  display: flex;
  width: 90%;
  flex-direction: column;
  padding: 20rpx;
}

.item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12px;
  box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.1);
}

.icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 30rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.text{
  display: flex;
  flex: 1;
  width: 100%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}
.text text{
  width: 100%;
}
.btn {
  border-radius: 30rpx;
  background-color: #ffffff;
  color: rgb(49, 228, 228);
  font-size: 24rpx;
  border: 1px solid rgb(49, 228, 228);
}
.btn:active{
  background-color: #27d3bf;
}
