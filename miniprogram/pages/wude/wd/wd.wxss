/* pages/wude/wd/wd.wxss */
.container {
  display: flex;
  width: 100%;
  height: 100%;
  margin-top: 30rpx;
}

.input-group {
  display: flex;
  width: 700rpx;
  margin-bottom: 20rpx;
  justify-content: space-between;
  border-bottom: 1rpx solid #ccc;
}
open-data{
  width: 15%;
  height: 10%;
  text-align: right;
}
.label {
  display:flex;
  align-items: center;
  justify-content: start;
  width: 170rpx;
  font-size: 28rpx;
  color: #666;
 
}

input,textarea,picker,radio-group {
  flex: 1;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  text-align: right;
  width: auto;
  background-color: #fff;
}

button[form-type='submit'] {
  display: block;
  margin: 0 auto;
  width: 600rpx;
  height: 84rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  background-color: rgb(79, 226, 177);
  border: none;
  border-radius: 10rpx;
}
button:active{
  background-color: rgb(250, 250, 250);
}

