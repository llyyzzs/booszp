<view class="container">
  <view class="top">
    <view class="top1">
      <view class="top1-1">{{ITEM.name}}</view>
      <view class="top1-2">{{ITEM.price}}</view>
    </view>
    <view class="top2">
      <view class="top2-1">
        <image src="../../image/定位.png"></image>
        <text>{{ITEM.position.city}}</text>
      </view>
      <view class="top2-1">
        <image src="../../image/经验.png"></image>
        <text>{{ITEM.work_experience}}</text>
      </view>
      <view class="top2-1">
        <image src="../../image/学历.png"></image>
        <text>{{ITEM.degree}}</text>
      </view>
    </view>
    <view class="biaoqian">
      <block wx:for="{{ITEM.tags}}" wx:key="id">
        <view class="yq"><text>{{item}}</text></view>
      </block>
    </view>
  </view>
  <view class="content">
    <view class="gs">
      <view class="gs-mz" bindtap="company">
        <view class="zpz-tx">
          <image src="{{baseurl+'/file/download/'+company.avatar}}" mode="aspectFill"></image>
        </view>
        <view class="zpz-xx">
          <text style="font-size: 16px;">{{ITEM.company.name}}</text>
          <text>{{ITEM.company.industry}} {{ITEM.company.scale}}人</text>
        </view>
      </view>
    </view>
    <view class="zw-top">
      <view class="{{name=='职位详情' ? 'zw-top1.active' : 'zw-top1'}}" bindtap="qh" data-name='职位详情'>职位详情</view>
      <view class="{{name=='工作内容' ? 'zw-top1.active' : 'zw-top1'}}" bindtap="qh" data-name="工作内容">工作内容</view>
    </view>
    <block wx:if="{{name=='职位详情'}}">
      <view class="nr">
        <text>{{ITEM.requirement}}</text>
      </view>
    </block>
    <block wx:if="{{name=='工作内容'}}">
      <view class="nr">
        <text>{{ITEM.description}}</text>
      </view>
    </block>
  </view>
  <view class="content" style="margin-bottom: 50px;">
    <text style="font-size: 18px; margin-bottom: 16px;">工作地点</text>
    <text style="font-size: 18px; margin-bottom: 16px;">{{ITEM.position.province}}{{ITEM.position.city}}{{ITEM.position.sub_district}}</text>
    <view class="gs-dd">
      <map id="myMap" longitude="{{company.address.longitude}}" latitude="{{company.address.latitude}}" scale="10" bindtap="chooseLocation" />
    </view>
    <view style="margin-top: 20px;margin-bottom: 10px;font-size: 18px;">该公司的其他岗位</view>
    <block wx:for="{{filteredItems}}" wx:key="id">
      <view class="item" bindtap="tiaozhuan" data-id="{{item.id}}">
        <view class="item-1">
          <view class="item-1-1">{{item.name}}</view>
          <view class="item-1-2">{{item.price}}</view>
        </view>
        <view class="item-2">{{item.position.city}}<text decode="{{true}}">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</text>{{item.work_day}}</view>
        <view class="item-3">
          <block wx:for="{{item.tags}}" wx:key="id"><text>{{item}}</text></block>
        </view>
      </view>
    </block>
  </view>
  <view class="btn-wrapper">
    <picker mode='selector' range='{{resumeList}}' bindchange='select'>
      <view class="btn-1">
        <image src="{{bm}}" mode="aspectFill"></image>
        <text>{{state? '已投递' : '投递'}}</text>
      </view>
    </picker>
    <view class="btn-1">
      <image src="{{sc}}" mode="aspectFill" bindtap="sc"></image>
      <text>{{isCollected ? '已收藏' : '收藏'}}</text>
    </view>
    <view class="btn-2" bindtap="gt"><button type="primary">立刻沟通</button></view>
  </view>
</view>