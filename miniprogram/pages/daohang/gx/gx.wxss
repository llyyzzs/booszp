.container{
  display: flex;
  width: 100%;
  height: 100vh;
  flex-direction: column;
  align-items: center;
  background: -webkit-linear-gradient(top,#43c5b6 ,rgb(209, 206, 206));
}
.top{
  display: flex;
  margin-bottom: 10px;
}
.swiper {
  display: flex;
  width: 100%;
  height: 400px;
  border-radius: 12px;
  overflow: hidden;
  }
  swiper-item{
    margin-left: -10px;
    border-radius: 12px;
    width: 90%;
  }
  .item{
    display: flex;
    width: 90%;
    height: 400px;
    padding-left: 20px;
    border-radius: 10px;
    margin-bottom: 10px;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: rgb(248, 248, 248);
  }
  .item-1{
    display: flex;
    width: 100%;
    height: auto;
    justify-content: space-between;
    margin-bottom: 10px;
  }
  .item-1-1{
    display: flex;
    width: auto;
    font-size: 18px;
    margin-left: 10px;
  }
  .item-1-2{
    width: auto;
    font-size: 18px;
    margin-right: 12px;
    color: rgba(10, 184, 77, 0.986);
  }
  .item-2{
    display: flex;
    width: 100%;
    height: auto;
    font-size: 10px;
    margin-left: 20px;
    margin-bottom: 10px;
    color: rgb(112, 110, 110);
  }
  .item-3{
    display: flex;
    width: 100%;
    font-size: 11px;
    height: auto;
    margin-left: 20px;
    margin-bottom: 10px;
    flex-wrap: wrap;
    color: rgb(112, 110, 110);
  }
  .item-3 text{
    background-color:rgb(238, 236, 236);
    margin-right: 10px;
  }
  .nr{
    display: flex;
    flex-direction: column;
    width: 95%;
    height: auto;
    padding-bottom: 20px;
    border-bottom:1px solid rgb(230, 229, 229);
  }
  .nr text{
    margin-top: 25rpx;
    font-size: 13px;
  }
  .item-0{
    display: flex;
    width: 100%;
    height: auto;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10rpx;
  }
  .item-0-1{
    display: flex;
    width: auto;
    font-size: 12px;
    margin-left: 10px;
    justify-content: center;
    align-items: center;
  }
  .item-0-1 image{
    width: 40px;
    height: 40px;
    border-radius: 50%;
  }
  
  .item-0-2{
    display: flex;
    width: auto;
    font-size: 12px;
    margin-right: 12px;
    justify-content: center;
  }
  button{
    border-radius: 12px;
    display: flex;
    margin-top: 20px;
    text-align: center;
    justify-content: center;
  }
  button:active{
    background-color: rgb(219, 221, 220);
  }
  