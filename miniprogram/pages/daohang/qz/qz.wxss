.container{
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
  align-items: center;
  
}

.top{
  display: flex;
  width: 100%;
  height: 30px;
  background: -webkit-linear-gradient(top,#43c5b6 ,rgb(209, 206, 206));
  background-attachment:fixed;
  border-radius: 12px;
  margin-bottom: 12rpx;
}
.search{
  width: 100%;
  display: flex;
  height: 30px;
}
.search image{
  width:30px ;
  height:30px ;
  border-radius: 12px  0px  0px 12px ;
}
.search input{
  width: 80%;
  height: 30px;
  border-radius:   0px 12px 12px 0px  ;
  font-size: 12px;
  margin-left: -15px;
}
.swiper {
  display: flex;
  width: 100%;
  height: 200px;
  }
.swiper image{
  width: 100%;
  height: 200px;
}
.nav-scroll {
  display: flex;
  height: 40px;
  white-space: nowrap;
  align-items: center;
  justify-content: center;
  width: 95%;
  background-color: rgb(255, 255, 255);
  border-radius: 10px;
  margin-top: 5px;
}
.nav-item {
  display: inline-block;
  width: 33%;
  height: auto;
  text-align: center;
  align-items: center;
  justify-content: center;
}
.nav-item.active {
  color: #16C4AF;
}
.content{
  display: flex;
  height: auto;
  width: 95%;
  border-radius: 10px;
  margin-top: 5px;
  flex-direction: column;
}
.item{
  display: flex;
  width: 100%;
  height: 130px;
  border-radius: 10px;
  margin-bottom: 10px;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: rgb(248, 248, 248);
}
.item-1{
  display: flex;
  width: 100%;
  height: auto;
  justify-content: space-between;
  margin-bottom: 10px;
}
.item-1-1{
  display: flex;
  width: auto;
  font-size: 18px;
  margin-left: 10px;
}
.item-1-2{
  width: auto;
  font-size: 18px;
  margin-right: 12px;
  color: rgba(10, 184, 77, 0.986);
}
.item-2{
  display: flex;
  width: 100%;
  height: auto;
  font-size: 10px;
  margin-left: 20px;
  margin-bottom: 10px;
  color: rgb(112, 110, 110);
}
.item-3{
  display: flex;
  width: 100%;
  font-size: 11px;
  height: auto;
  margin-left: 20px;
  margin-bottom: 10px;
  flex-wrap: wrap;
  color: rgb(112, 110, 110);
}
.item-3 text{
  background-color:rgb(238, 236, 236);
  margin-right: 10px;
}

.item-4{
  display: flex;
  width: 100%;
  height: auto;
  justify-content: space-between;
  align-items: center;
}
.item-4-1{
  display: flex;
  width: auto;
  font-size: 12px;
  margin-left: 10px;
  justify-content: center;
  align-items: center;
}
.item-4-1 image{
  width: 20px;
  height: 20px;
  border-radius: 50%;
}

.item-4-2{
  display: flex;
  width: auto;
  font-size: 12px;
  margin-right: 12px;
  justify-content: center;
}