<view class="container">
  <view class="top">
    <view class="search">
      <image src="../../image/搜索.png" bindtap="onSearch" />
          <input type="text" placeholder="输入关键词" bindconfirm="onSearch" value="{{keyword}}" bindinput="onInputChange" />
    </view>
  </view>
  <view class="daohuang">
    <view class="mulu">
      <navigator hover-class="none" url="/pages/daohang/fj/fj">
        <image src="../../image/附近.png" mode="widthFix"></image>
        <view class="text">附近工作</view>
      </navigator>
    </view>
    <view class="mulu">
      <navigator hover-class="none" url="/pages/daohang/qz/qz">
        <image src="../../image/兼职.png" mode="widthFix"></image>
        <view class="text">热门兼职</view>
      </navigator>
    </view>
    <view class="mulu">
      <navigator hover-class="none" url="/pages/daohang/gx/gx">
        <image src="../../image/高薪.png" mode="widthFix"></image>
        <view class="text">猜你喜欢</view>
      </navigator>
    </view>
    <view class="mulu">
      <navigator hover-class="none" url="/pages/daohang/hy/hy">
        <image src="../../image/市场.png" mode="widthFix"></image>
        <view class="text">企业搜索</view>
      </navigator>
    </view>
  </view>

  <view class="nav-scroll">
    <scroll-view scroll-x scrollbar="true">
      <block wx:for="{{daohuang}}" wx:key="id">
        <view class="{{name==item.name ? 'nav-item.active' : 'nav-item'}}" bindtap="handleNavItemTap" data-name="{{item.name}}">{{item.name}}</view>
      </block>
    </scroll-view>
  </view>
  <view class="content">
    <block wx:for="{{filteredItems}}" wx:key="id">
      <view class="item" bindtap="tiaozhuan" data-id="{{item.id}}">
        <view class="item-1">
          <view class="item-1-1">{{item.name}}</view>
          <view class="item-1-2">{{item.price}}</view>
        </view>
        <view class="item-2">{{item.position.city}}<text decode="{{true}}">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</text>{{item.work_day}}</view>
        <view class="item-3">
          <block wx:for="{{item.tags}}" wx:key="id"><text>{{item}}</text></block>
        </view>
        <view class="item-4">
          <view class="item-4-1">
            <image src="{{baseurl+'/file/download/'+item.company.avatar}}" mode="aspectFill"></image>
            <view>
              <view style="margin-left: 10px;font-size: 14px; color: black;">{{item.company.name}}</view>
              <view style="margin-left: 10px; font-size: 10px;">
                {{item.company.industry}} {{item.company.scale}}
              </view>
            </view>
          </view>
        </view>
      </view>
    </block>
  </view>
  <view wx:if="{{ loading }}">加载中...</view>
</view>